<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net472</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="16.6.0" />
    <PackageReference Include="Microsoft.VisualStudio.Setup.Configuration.Interop" Version="1.16.30" />
  </ItemGroup>

  <ItemGroup>
    <FilesToCopy Include="$(OutputPath)\VisualStudioPathFinder.dll"/>
    <FilesToCopy Include="$(OutputPath)\Microsoft.VisualStudio.Setup.Configuration.Interop.dll"/>
  </ItemGroup>

  <Target Name="CopyFiles" AfterTargets="Build">
    <Copy
      SourceFiles="@(FilesToCopy)"
      DestinationFolder="..\lib" />
  </Target>
</Project>
